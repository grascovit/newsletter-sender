<%= form_for(sender) do |form| %>
  <%= render 'shared/error_messages', object: sender %>
  <div class="form-group">
    <%= form.text_field :name,
                        autofocus: true,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.sender.name'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_field :email,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.sender.email'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit t('.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
