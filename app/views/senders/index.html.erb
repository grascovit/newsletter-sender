<div class="row">
  <div class="col-12 mx-auto">
    <h4 class="my-4 text-center">
      <%= t('.header') %>
    </h4>
    <%= link_to new_sender_path, class: 'float-right btn btn-sm btn-primary my-2' do %>
      <%= t('.new_sender') %>
      <i class="fas fa-plus"></i>
    <% end %>
    <div class="table-responsive">
      <table class="table text-center">
        <thead>
        <tr>
          <th><%= t('.name') %></th>
          <th><%= t('.email') %></th>
          <th><%= t('.actions') %></th>
        </tr>
        </thead>
        <tbody>
        <% @senders.each do |sender| %>
          <tr>
            <td><%= sender.name %></td>
            <td><%= sender.email %></td>
            <td>
              <%= link_to edit_sender_path(sender), class: 'btn btn-sm btn-warning' do %>
                <i class="fas fa-pencil-alt fa-inverse"></i>
              <% end %>
              <%= link_to sender, method: :delete, data: { confirm: t('.confirmation_message') }, class: 'btn btn-sm btn-danger' do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
