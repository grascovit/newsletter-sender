<%= form_for(recipient) do |form| %>
  <%= render 'shared/error_messages', object: recipient %>
  <div class="form-group">
    <%= form.text_field :name,
                        autofocus: true,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.sender.name'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_field :email,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.sender.email'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.select :list_id,
                    options_from_collection_for_select(current_user.lists, :id, :name, recipient.list_id),
                    { include_blank: t('.select_list') },
                    { class: 'custom-select' } %>
  </div>
  <div class="form-group">
    <%= form.submit t('.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
