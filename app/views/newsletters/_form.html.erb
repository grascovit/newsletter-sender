<%= form_for(newsletter) do |form| %>
  <%= render 'shared/error_messages', object: newsletter %>
  <div class="form-group">
    <%= form.text_field :title,
                        autofocus: true,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.newsletter.title'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_area :body,
                        placeholder: t('activerecord.attributes.newsletter.body'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.select :list_id,
                    options_from_collection_for_select(current_user.lists, :id, :name, newsletter.list_id),
                    { include_blank: t('.select_list') },
                    { class: 'custom-select' } %>
  </div>
  <div class="form-group">
    <%= form.select :sender_id,
                    options_from_collection_for_select(current_user.senders, :id, :name, newsletter.sender_id),
                    { include_blank: t('.select_sender') },
                    { class: 'custom-select' } %>
  </div>
  <div class="form-group">
    <%= form.select :template_id,
                    options_from_collection_for_select(current_user.templates, :id, :name, newsletter.template_id),
                    { include_blank: t('.select_template') },
                    { class: 'custom-select' } %>
  </div>
  <div class="form-group">
    <%= form.submit t('.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
