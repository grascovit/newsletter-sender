<div class="row">
  <div class="col-12 mx-auto">
    <h4 class="my-4 text-center">
      <%= t('.header') %>
    </h4>
    <%= link_to new_template_path, class: 'float-right btn btn-sm btn-primary my-2' do %>
      <%= t('.new_template') %>
      <i class="fas fa-plus"></i>
    <% end %>
    <div class="table-responsive">
      <table class="table text-center">
        <thead>
        <tr>
          <th><%= t('.name') %></th>
          <th><%= t('.actions') %></th>
        </tr>
        </thead>
        <tbody>
        <% @templates.each do |template| %>
          <tr>
            <td><%= template.name %></td>
            <td class="actions">
              <%= link_to template, class: 'btn btn-sm btn-primary' do %>
                <i class="fas fa-info-circle"></i>
              <% end %>
              <%= link_to edit_template_path(template), class: 'btn btn-sm btn-warning' do %>
                <i class="fas fa-pencil-alt fa-inverse"></i>
              <% end %>
              <%= link_to template, method: :delete, data: { confirm: t('.confirmation_message') }, class: 'btn btn-sm btn-danger' do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
