<%= form_for(template) do |form| %>
  <%= render 'shared/error_messages', object: template %>
  <div class="form-group">
    <%= form.text_field :name,
                        autofocus: true,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.template.name'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_area :body,
                       placeholder: t('activerecord.attributes.template.body'),
                       class: 'tinymce',
                       rows: 16 %>
  </div>
  <div class="form-group">
    <%= form.submit t('.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
