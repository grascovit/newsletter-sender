<%- if controller_name != 'sessions' %>
  <%= link_to t('.login'), new_session_path(resource_name), class: 'btn btn-sm btn-block btn-link' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('.sign_up'), new_registration_path(resource_name), class: 'btn btn-sm btn-block btn-link' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('.forgot_password'), new_password_path(resource_name), class: 'btn btn-sm btn-block btn-link' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.confirmation_email'), new_confirmation_path(resource_name), class: 'btn btn-sm btn-block btn-link' %>
<% end -%>
